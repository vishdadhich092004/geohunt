generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  username    String        @unique
  email       String        @unique
  password    String
  games       Game[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Leaderboard Leaderboard[]
}

model Game {
  id String @id @default(uuid())

  User       User?     @relation(fields: [userId], references: [id])
  userId     String?
  guesses    Guess[]
  score      Int       @default(0)
  startedAt  DateTime  @default(now())
  finishedAt DateTime?
}

model Location {
  id          String  @id @default(uuid())
  lattitude   Float
  longitude   Float
  name        String?
  description String?
  Guess       Guess[]
}

model Guess {
  id         String   @id @default(uuid())
  game       Game     @relation(fields: [gameId], references: [id])
  gameId     String
  location   Location @relation(fields: [locationId], references: [id])
  locationId String
  lattitude  Float
  longitude  Float
  distance   Float
  createdAt  DateTime @default(now())
}

model Leaderboard {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  totalScore Int
  rank       Int
  createdAt  DateTime @default(now())
}
